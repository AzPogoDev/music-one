{% extends 'base.html.twig' %}

{% block title %}Nouvel événement - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event_form') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event_form') }}
{% endblock %}

{% block body %}
    <h1>Nouvel événement</h1>

    {{ form_start(form) }}
    <div class="form-row">
        {{ form_row(form.name) }}
    </div>
    <div class="form-row">
        {{ form_row(form.startAt) }}
        {{ form_row(form.endAt) }}
    </div>
    <div class="form-row">
        {{ form_row(form.price) }}
        {{ form_row(form.capacity) }}
    </div>
    <div class="form-row">
        {{ form_row(form.category) }}
        {{ form_row(form.place) }}
    </div>
    <div class="form-row">
        {{ form_row(form.picture) }}
        {{ form_row(form.description) }}
    </div>
    <div class="form-row">
        {{ form_row(form.tags) }}
    </div>

    <button class="button">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
